@model BrockAllen.MembershipReboot.Mvc.Areas.UserAccount.Models.PasswordResetInputModel
@{
    Page.Title = "Reset Password";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary("Please correct the following errors")
    @Html.AntiForgeryToken()

    <fieldset class="editor small">
        <legend>@Page.Title</legend>

        @Html.EditorForModel()

        <div class="buttons">
            <button>Submit</button>
        </div>

    </fieldset>
}

@using (Html.BeginForm("Confirm", "PasswordReset", FormMethod.Get))
{
    <fieldset>
        <legend>Confirm</legend>
        <p>
            <label for="id">Key</label>
            <input id="id" name="id" />
        </p>
        <p class="buttons"><button>Submit</button></p>
    </fieldset>
}
