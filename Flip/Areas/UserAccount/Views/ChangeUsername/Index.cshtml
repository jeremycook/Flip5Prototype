@model BrockAllen.MembershipReboot.Mvc.Areas.UserAccount.Models.ChangeUsernameInputModel
@{
    Page.Title = "Change Username";
}

<h1>@Page.Title</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("Error")
